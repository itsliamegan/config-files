[alias]
  anoe = commit --amend --no-edit
  ci = commit --verbose
  co = checkout
  di = diff
  ds = diff --staged
  lo = log --oneline --decorate
  ps = push
  st = status
[color "diff"]
  meta = brightyellow
  frag = brightmagenta bold
  commit = yellow bold
  old = red
  new = green
  whitespace = red reverse
[color "diff-highlight"]
  oldNormal = red
  oldHighlight = red "#500000"
  newNormal = green
  newHighlight = green "#003000"
[core]
  attributesfile = ~/.gitattributes
  excludesfile = ~/.gitignore
  pager = diff-so-fancy | less --tabs=2 --raw-control-chars --quit-if-one-screen --no-init
[diff]
  colorMoved = zebra
[diff-so-fancy]
  markEmptyLines = false
  stripLeadingSymbols = false
[init]
  defaultBranch = main
